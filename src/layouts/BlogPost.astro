---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SteamIconUrl from '../assets/icons/steam.svg?url';
import ItchIconUrl from '../assets/icons/itch.svg?url';

type Props = CollectionEntry<'projects'>['data'];

const { title, description, year, updatedDate, heroImage, github, steam, itch } = Astro.props as Props;
const heroPortrait = (Astro.props as any).heroPortrait ?? false;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
				max-width: 720px;
				margin: 0 auto;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				width: 100%;
				height: auto;
				aspect-ratio: 2 / 1;
				object-fit: cover;
			}
			.hero-image.portrait {
				max-width: 420px;
			}
			.hero-image.portrait img {
				aspect-ratio: auto;
				object-fit: cover;
				width: 100%;
				height: auto;
			}
			.project-links {
				display: flex;
				gap: 0.75rem;
				justify-content: center;
				align-items: center;
				margin: 0.75rem 0;
				line-height: 0;
			}
			.project-links a {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				width: 40px;
				height: 40px;
				border-radius: 8px;
				background: rgba(var(--gray), 0.06);
				color: inherit;
				text-decoration: none;
				position: relative;
			}
			.project-links svg { width: 20px; height: 20px; display: block; vertical-align: middle }
			.project-links img {
				display: block;
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%,-50%);
				height: 60%;
				max-height: 22px;
				width: auto;
				max-width: 80%;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class={"hero-image" + (heroPortrait ? " portrait" : "")}>
					{heroImage && <Image width={heroPortrait ? 420 : 1020} height={heroPortrait ? 560 : 510} src={heroImage} alt="" />}
				</div>
					{((github && github.trim()) || (steam && steam.trim()) || (itch && itch.trim())) && (
						<div class="project-links">
								{github && github.trim() && (
								<a href={github} target="_blank" rel="noopener noreferrer" aria-label="View source on GitHub">
									<svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 .5C5.65.5.5 5.65.5 12c0 5.09 3.29 9.4 7.86 10.93.58.11.79-.25.79-.56 0-.28-.01-1.02-.02-2-3.2.7-3.88-1.54-3.88-1.54-.53-1.35-1.3-1.71-1.3-1.71-1.06-.72.08-.71.08-.71 1.17.08 1.79 1.2 1.79 1.2 1.04 1.78 2.73 1.27 3.4.97.11-.76.41-1.27.74-1.56-2.55-.29-5.24-1.28-5.24-5.71 0-1.26.45-2.29 1.19-3.1-.12-.29-.52-1.48.11-3.08 0 0 .97-.31 3.18 1.18.92-.26 1.9-.39 2.88-.39.98 0 1.96.13 2.88.39 2.21-1.49 3.18-1.18 3.18-1.18.63 1.6.23 2.79.11 3.08.74.81 1.19 1.84 1.19 3.1 0 4.44-2.69 5.42-5.25 5.71.42.36.8 1.07.8 2.16 0 1.56-.01 2.82-.01 3.2 0 .31.21.68.8.56C20.71 21.4 24 17.09 24 12 24 5.65 18.35.5 12 .5z"/></svg>
								</a>
							)}
								{steam && steam.trim() && (
								<a href={steam} target="_blank" rel="noopener noreferrer" aria-label="Open on Steam">
									<img src={SteamIconUrl} alt="Steam" />
								</a>
							)}
								{itch && itch.trim() && (
								<a href={itch} target="_blank" rel="noopener noreferrer" aria-label="Open on itch.io">
									<img src={ItchIconUrl} alt="itch.io" />
								</a>
							)}
						</div>
					)}
				<div class="prose">
					<div class="title">
						<div class="date">
							{year}
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on {updatedDate}
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
