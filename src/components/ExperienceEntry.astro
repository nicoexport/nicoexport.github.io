---
interface Props {
	title: string;
	company: string;
	years: string;
	html: string;
}

const { title, company, years, html } = Astro.props;
---

<div class="experience-item">
	<div class="experience-header">
		<h5>{title}</h5>
	</div>
    <span class="years">{years}</span>
	<p class="company">{company}</p>
	<div class="experience-content" set:html={html} />
</div>

<style>
	.experience-item {
		margin-bottom: 2rem;
	}
	.experience-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		gap: 1rem;
		margin-bottom: 0.25rem;
	}
	.experience-header h3 {
		margin: 0;
	}
	.years {
		color: rgb(var(--gray));
		font-size: 0.9em;
		white-space: nowrap;
	}
	.company {
		margin: 0;
		color: rgb(var(--gray));
		font-style: italic;
		margin-bottom: 0.75rem;
	}
	.experience-content :global(ul) {
		margin: 0.5rem 0;
		padding-left: 1.5rem;
	}
	.experience-content :global(li) {
		margin-bottom: 0.5rem;
	}
</style>
